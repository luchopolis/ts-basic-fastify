{
  "compilerOptions": {
    "target": "ESNext",
    "sourceMap": true,
    "outDir": "dist",
    "strict": true,
    "module": "CommonJS",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "inlineSources": true,
    "skipLibCheck": true,
    "paths": {
      "@utils/*": ["./src/utils/*"],
      "@config/*": ["./src/config/*"]
    },
  },
  "exclude": ["dist", "node_modules"]
}
